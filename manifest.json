{
  "manifest_version": 2,

  "name": "Play",
  "version": "0.5",
  "description": "An extension to control audio or video playing in background tabs.",
  "icons": {
    "16": "play_icon_16.png",
    "48": "play_icon_48.png",
    "128": "play_icon_128.png"
  },
  "browser_action": {
    "default_icon": "play_icon_38.png"
  },

  "commands": {
    "playPauseCommand": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Play or pause stream"
    }
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "permissions": ["<all_urls>", "storage", "tabs"]
}
