{
  "manifest_version": 2,

  "name": "play",
  "version": "0.1",
  "description": "Control media playing in background tabs.",

  "browser_action": {
    "default_icon": "iconpeek.png"
    //"default_popup": "popup.html"
  },

  "commands": {
    "playPauseCommand": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Play or pause stream"
    }
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "permissions": ["<all_urls>", "storage", "tabs"]
}